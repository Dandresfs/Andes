extends base
block titulo
    | Cambiar contraseña

block itemsNavbarBreadcrumb
    li
        a(href="/region/") Inicio
    li(class="active") Cambiar contraseña: {{user.username}}

block body_content
    div(class="container-fluid")
        form(action="",method="post",enctype="multipart/form-data")
            table(class="table table-bordered text-center",style="color:black;background:white;")
                tr
                    th(class="text-center") Contraseña antigua:
                    th(class="text-center") Contraseña nueva:
                    th(class="text-center") Contraseña nueva (confirmación):
                tr
                    td
                        input(id="id_old_password",name="old_password",type="password",style="width:100%;")
                    td
                        input(id="id_new_password1",name="new_password1",type="password",style="width:100%;")
                    td
                        input(id="id_new_password2",name="new_password2",type="password",style="width:100%;")
            | {% csrf_token %}
            div(class="container-fluid barra")
                div(class="col-lg-2")
                    button(type="submit",class="btn btn-default") Grabar
                div(class="col-lg-2")
                    p(id="porcentaje",class="text-right")
                div(class="col-lg-8")
                    | {% progress_bar %}
block extra_script
    script(src="{% static 'js/drop.js' %}")