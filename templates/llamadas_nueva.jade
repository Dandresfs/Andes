extends base
block titulo
    |Nueva Respuesta
block itemsNavbarBreadcrumb
    li
        a(href="/region/") Inicio
    li
        a(href="../../../../") {{REGION}}
    li
        a(href="../../../") Andes
    li
        a(href="../../") Formación
    li
        a(href="../") Llamadas
    li(class="active") Nuevo Registro
block body_content
    div(class="container-fluid")
        form(action="",method="post",enctype="multipart/form-data")
            table(class="table table-bordered text-center",style="color:black;background:white;")
                input(id="id_region",name="region", value="{{ID_REGION}}",hidden)
                tr
                    th(class="text-center") Campo:
                    th(class="text-center") Información:
                tr
                    td(class = "text-center" style="font-weight:bold;") Eje:
                    td(class = "text-center")
                        | {{form.eje}}
                tr
                    td(class = "text-center" style="font-weight:bold;") Nombre:
                    td(class = "text-center")
                        | {{form.nombre}}
                tr
                    td(class = "text-center" style="font-weight:bold;") Email:
                    td(class = "text-center")
                        | {{form.email}}
                tr
                    td(class = "text-center" style="font-weight:bold;") Telefono:
                    td(class = "text-center")
                        | {{form.telefono}}
                tr
                    td(class = "text-center" style="font-weight:bold;") Municipio:
                    td(class = "text-center")
                        | {{form.municipio}}
                tr
                    td(class = "text-center" style="font-weight:bold;") Mensaje:
                    td(class = "text-center")
                        | {{form.mensaje}}
            | {% csrf_token %}
            div(class="container-fluid barra")
                div(class="col-lg-2")
                    button(type="submit",class="btn btn-default") Grabar
                div(class="col-lg-2")
                    p(id="porcentaje",class="text-right")
                div(class="col-lg-8")
                    | {% progress_bar %}
block extra_script
    script(src="{% static 'js/drop.js' %}")