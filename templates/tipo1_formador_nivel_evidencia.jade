        input(type="hidden",name="id_region",value="{{ID_REGION}}",id="id_region")
        input(type="hidden",name="id_formador",value="{{ID_FORMADOR}}",id="id_formador")
        table(id="table",class="table table-striped table-bordered")
            thead
                tr
                    th Nivel
                    th Cantidad de asignaciones
            tbody
                tr(role="row",class="odd")
                    td
                        a(href="1/",style="color:#004c99;") Nivel 1
                    td {{CANTIDAD_NIVEL1}}
                tr(role="row",class="even")
                    td
                        a(href="2/",style="color:#004c99;") Nivel 2
                    td {{CANTIDAD_NIVEL2}}

                tr(role="row",class="odd")
                    td
                        a(href="3/",style="color:#004c99;") Nivel 3
                    td {{CANTIDAD_NIVEL3}}
                tr(role="row",class="even")
                    td
                        a(href="4/",style="color:#004c99;") Nivel 4
                    td {{CANTIDAD_NIVEL4}}