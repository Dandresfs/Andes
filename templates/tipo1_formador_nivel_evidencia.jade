extends base
block titulo
    |Formadores Tipo 1
block itemsNavbarBreadcrumb
    li
        a(href="/region/") Inicio
    li
        a(href="../../../../../../../") {{REGION}}
    li
        a(href="../../../../../../") Andes
    li
        a(href="../../../../../") Formaci√≥n
    li
