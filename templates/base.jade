|{% load staticfiles %}
block filters
doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport",content="width=device-width, initial-scale=1")
        link(rel="stylesheet",href="{% static 'css/normalize.css' %}")
        link(href='http://fonts.googleapis.com/css?family=Lato',rel='stylesheet',type='text/css')
        title
            block titulo

        link(rel="stylesheet",href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")
        link(rel="stylesheet",href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css")
        link(rel="stylesheet",href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")


        link(rel="stylesheet",href="//cdn.datatables.net/1.10.8/css/jquery.dataTables.min.css")
        link(rel="stylesheet",href="{% static 'css/hover.min.css' %}")
        link(rel="stylesheet",href="{% static 'css/bootstrap-lightbox.min.css' %}")
        link(rel="stylesheet",href="{% static 'css/base.css' %}")
        block extra_style
    body
        |{% if user.is_authenticated %}
        nav(class="navbar navbar-custom")
            div(class="container-fluid")
                div(class="navbar-header")
                    button(type="button",class="navbar-toggle collapsed",data-toggle="collapse",data-target="#idNavbar",aria-expanded="false")
                        span(class="fa fa-bars fa-lg")
                div(class="collapse navbar-collapse",id="idNavbar")
                    ul(class="nav navbar-nav navbar-left")
                        div(class="bread")
                            ol(class="breadcrumb")
                                block itemsNavbarBreadcrumb

                    ul(class="nav navbar-nav navbar-right")
                        block itemsNavbarRight
                        li(class="dropdown")
                            a(href="#",id="linkAvatar",class="dropdown-toggle capitalize",data-toggle="dropdown",role="button",aria-haspopup="true",aria-expanded="false")
                                img(id="profileImage",src="{% static 'imagenes/user-unknown.png' %}",class="profile-image img-circle")
                                span(class="caret")
                            ul(class="dropdown-menu")
                                li
                                    a(href="/cerrar") Cerrar sesi√≥n
        | {% endif %}
        block body_content
        script(src="//code.jquery.com/jquery-1.11.3.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js")
        script(src="//cdn.datatables.net/1.10.8/js/jquery.dataTables.min.js")
        script(src="{% static 'js/bootstrap-lightbox.min.js' %}")
        script(src="{% static 'js/bootstrap-img-lightbox-tooltip.js' %}")
        block extra_script
        script
            |if(localStorage.getItem("user") != null){
            |$("#profileImage").attr('src',localStorage.getItem("user"));}
