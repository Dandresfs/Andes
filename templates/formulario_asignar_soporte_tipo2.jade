extends base
block titulo
    |Actualizar Soporte
block itemsNavbarBreadcrumb
    li
        a(href="/region/") Inicio
    li
        a(href="../../../../../../") {{REGION}}
    li
        a(href="../../../../../") Andes
    li
        a(href="../../../../") Formación
    li
        a(href="../../../") Formadores Tipo 2
    li
        a(href="../../") {{NOMBRE_FORMADOR}}
    li(class="active") Actualizar Soporte
block body_content
    div(class="container-fluid")
        form(action="",method="post",enctype="multipart/form-data")
            table(class="table table-bordered text-center",style="color:black;background:white;")
                input(id="id_usuario",name="usuario", value="{{user.id}}",hidden)
                input(id="id_grupo",name="grupo", value="{{ID_GRUPO}}",hidden)
                tr
                    th(class="text-center") Campo:
                    th(class="text-center") Información:
                tr
                    td(class = "text-center" style="font-weight:bold;") {{NOMBRE_SOPORTE}}:
                    td(class = "text-center")
                        | {{form.participantes}}
            | {% csrf_token %}
            div(class="container-fluid barra")
                |{{ERROR}}
                div(class="col-lg-2")
                    button(type="submit",class="btn btn-default") Grabar
                div(class="col-lg-2")
                    p(id="porcentaje",class="text-right")
                div(class="col-lg-8")
                    | {% progress_bar %}
block extra_script
    script(src="{% static 'js/drop.js' %}")
    script(src="{% static 'js/escuela_tic.js' %}")