extends base
block titulo
    | Nuevo Informe
block itemsNavbarBreadcrumb
    li
        a(href="/region/") Inicio
    li
        a(href="../../../../../../") {{REGION}}
    li
        a(href="../../../../../") Andes
    li
        a(href="../../../../") Administrativo
    li
        a(href="../../../") CPE
    li
        a(href="../../") Obligaciones Contractuales
    li(class="active") {{OBLIGACION}}
block body_content
    div(class="container-fluid")
        form(action="",method="post",enctype="multipart/form-data")
            table(class="table table-bordered text-center",style="color:black;background:white;")
                input(id="id_region",name="region", value="{{ID_REGION}}",hidden)
                input(id="id_obligacion",name="obligacion", value="{{ID_OBLIGACION}}",hidden)
                tr
                    th(class="text-center") Campo:
                    th(class="text-center") Informaci√≥n:
                tr
                    td(class = "text-center" style="font-weight:bold;") Mes:
                    td(class = "text-center")
                        |{{form.mes}}
                tr
                    td(class = "text-center" style="font-weight:bold;") Descripcion:
                    td(class = "text-center")
                        |{{form.descripcion}}
                tr
                    td(class = "text-center" style="font-weight:bold;") Soporte:
                    td(class = "text-center")
                        |{{form.soporte}}
            | {% csrf_token %}
            div(class="container-fluid barra")
                div(class="col-lg-2")
                    button(type="submit",class="btn btn-default") Grabar
                div(class="col-lg-2")
                    p(id="porcentaje",class="text-right")
                div(class="col-lg-8")
                    | {% progress_bar %}
block extra_script
    script(src="{% static 'js/drop.js' %}")