extends base
block titulo
    | Nuevo Grupo
block itemsNavbarBreadcrumb
    li
        a(href="/region/") Inicio
    li
        a(href="../../../../../") {{REGION}}
    li
        a(href="../../../../") Andes
    li
        a(href="../../../") Formación
    li
        a(href="../../") Formadores Tipo 2
    li
        a(href="../") {{NOMBRE_FORMADOR}}
    li(class="active") Nuevo
block body_content
    div(class="container-fluid")
        form(action="",method="post",enctype="multipart/form-data")
            table(class="table table-bordered text-center",style="color:black;background:white;")
                input(id="id_formador",name="formador", value="{{ID_FORMADOR}}",hidden)
                tr
                    th(class="text-center") Campo:
                    th(class="text-center") Información:

                tr
                    td(class = "text-center" style="font-weight:bold;") Nombre:
                    td(class = "text-center")
                        |{{form.nombre}}
                tr
                    td(class = "text-center" style="font-weight:bold;") Municipio:
                    td(class = "text-center")
                        |{{form.municipio}}
                tr
                    td(class = "text-center" style="font-weight:bold;") Dirección:
                    td(class = "text-center")
                        |{{form.direccion}}
                tr
                    td(class = "text-center" style="font-weight:bold;") Horario:
                    td(class = "text-center")
                        |{{form.horario}}

            | {% csrf_token %}
            div(class="container-fluid barra")
               div(class="col-lg-2")
                  button(type="submit",class="btn btn-default") Grabar
               div(class="col-lg-2")
                  p(id="porcentaje",class="text-right")
               div(class="col-lg-8")
                  |{% progress_bar %}
block extra_script
    script(src="{% static 'js/drop.js' %}")